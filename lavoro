#include <iostream>
#include <windows.h>
using namespace std;

int main()
{
    int n,n1;
    cin >> n;
	HANDLE hConsole = GetStdHandle(STD_OUTPUT_HANDLE);
    if (n == 0)
        cout << 0;
    else
    {      
        for (int i = 0; i < n; i++)
        {
             system("color 0A");
       SetConsoleTextAttribute(hConsole, FOREGROUND_BROWN | FOREGROUND_INTENSITY);
            for (int s = 0; s < n - i - 1; s++)
                cout << " ";
            for (int j = 0; j <= i; j++)
                {	
				cout << "* ";
				
                }
            cout << endl;
        }
    }
   

    return 0;
}
	
